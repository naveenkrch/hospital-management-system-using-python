        if 1<= spec <=20:
            p_id = int(input("ğ„ğ§ğ­ğğ« ğğšğ­ğ¢ğğ§ğ­'ğ¬ ğˆğƒ: "))
            while p_id in patients_Data:
                p_id = input(" âŒ ğŸ…´ğŸ†ğŸ†ğŸ…¾ğŸ† âŒ Patient ID already exist! Enter new ID: ")
            p_name = input("ğ—˜ğ—»ğ˜ğ—²ğ—¿ ğ—½ğ—®ğ˜ğ—¶ğ—²ğ—»ğ˜'ğ˜€ ğ—»ğ—®ğ—ºğ—²: ")
            p_status = int(input('''  
